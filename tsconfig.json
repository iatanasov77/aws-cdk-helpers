{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist/cjs",
        "strict": false,
        "declaration": true,
        
        "paths": {
            "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}